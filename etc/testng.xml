<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Unit Tests" verbose="1">

    <test name="ReportNG" allow-return-values="true">
        <packages>
            <package name="org.uncommons.reportng"/>
        </packages>
    </test>

    <listeners>
        <listener class-name="org.uncommons.reportng.listener.CustomSuiteListener"/>
        <listener class-name="org.uncommons.reportng.listener.CustomTestListener"/>
        <listener class-name="org.uncommons.reportng.listener.CustomResultListener"/>
        <listener class-name="org.uncommons.reportng.listener.Interceptor"/>
    </listeners>

</suite>
